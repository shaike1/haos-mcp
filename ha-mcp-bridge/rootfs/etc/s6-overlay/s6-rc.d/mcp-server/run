bashio::log.info "ðŸ”— ${CLAUDE_URL}"
bashio::log.info ""
bashio::log.info "ðŸ“‹ Direct API access - no ingress needed!"
bashio::log.info "âœ… Bypasses ingress routing issues"
bashio::log.info "ðŸ”§ Uses HA API directly via supervisor token"
bashio::log.info ""
bashio::log.info "ðŸŽ¯ =================================="
